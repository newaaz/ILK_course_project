<% provide(:title, "Услуги и сервисы") %>

<%= turbo_frame_tag :town_services do %>
  <!-- breadcrumbs -->
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Главная', root_path %></li>
        <% if @category_title %>
          <li class="breadcrumb-item"><%= link_to "Услуги и сервисы", services_path %></li> 
          <li class="breadcrumb-item active"><%= @category_title %></li>  
        <% else %>        
          <li class="breadcrumb-item active">Услуги и сервисы</li>    
        <% end %>
      </ol>
    </nav>
  </div>

  <section class="pt-2">
    <div class="container">
      <div class="my-3">
        <%= link_to 'Все услуги и сервисы', services_path(@town), class: 'btn btn-light btn-sm' %>
        <% Service::SERVICE_CATEGORIES.each do |cat| %>
          <%= link_to cat, services_path(@town, { category_title: cat }), class: 'btn btn-light btn-sm' %>
        <% end %>
      </div>      
        <% if @services.any? %>
          <div class="mb-3">
            <h1 class="fs-4">Объявлений: <%= @pagy.count %></h1>          
          </div>

          <div class="row g-4">
            <%= render @services %>
          </div>

          <% if @pagy.count > 12 %>
            <div class="mt-5 d-flex justify-content-center">
              <%= pagy_bootstrap_nav(@pagy).html_safe %>
            </div>
          <% end %>
          <% else %>
          <div class="text-center">
            <h1 class="fs-4 mb-2">Нет подходящих объявлений о сервисах и услугах</h1>
          </div>
        <% end %>
      </div>
    </div>

  </section>
<% end %>

<section></section>
<section></section>
<section></section>
<section></section>




