<%= form_with model:[@property, @room], class: 'room-form w-75', data: {turbo: false} do |f| %>

  <%= render 'shared/errors', object: f.object %>

  <div class="form-group mb-2">
    <%= f.label :title, class: 'form-label' %>        
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :guest_base_count %>       
    <%= f.number_field :guest_base_count, class: 'form-control' %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :guest_max_count %>       
    <%= f.number_field :guest_max_count, class: 'form-control' %>
  </div>

  <h4>Prices:</h4>
  <div class="price_fields">
    <%= f.fields_for :prices do |price| %>
      <%= render 'prices/price_fields', f: price %>
    <% end %>
    <div class="prices mt-2">
      <%= link_to_add_association 'add price', f, :prices, partial: 'prices/price_fields' %>
    </div>
  </div>

  <%= f.submit "Save",class:"btn btn-primary my-4" %>
<% end %>
