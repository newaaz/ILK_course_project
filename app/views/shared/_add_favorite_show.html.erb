<% if current_favorite.send("#{listing.model_name.singular}_ids").include?(listing.id) %>

		<%= link_to favorite_items_path(listing_type: listing.model_name.name, listing_id: listing.id),
									class: "btn btn-sm btn-orange-soft fs-6",
									data: { "turbo-method": :post } do %>

			<i class="bi bi-heart-fill me-2"></i>Добавлено
		<% end %>
<% else %>
		<%= link_to favorite_items_path(listing_type: listing.model_name.name, listing_id: listing.id),
									class: "btn btn-sm btn-orange-soft fs-6",
									data: { "turbo-method": :post } do %>

			<i class="bi bi-heart me-2"></i>В избранное
		<% end %>
<% end %>

