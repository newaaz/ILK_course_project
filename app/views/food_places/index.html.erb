<% provide(:title, "Где поесть") %>

<%= turbo_frame_tag :town_food_places do %>
  <!-- breadcrumbs -->
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Главная', root_path %></li>      
        <li class="breadcrumb-item active">Где поесть</li>      
      </ol>
    </nav>

    <div class="mt-3 text-center text-md-start">
      <%= link_to properties_path, class: 'badge bg-primary bg-opacity-10 text-primary ms-2 mb-3' do %>
        <i class="bi bi-check2-circle me-2"></i>Где остановиться
      <% end %>
      <%= link_to activities_path, class: 'badge bg-orange bg-opacity-10 text-orange ms-2 mb-3' do %>
        <i class="bi bi-star me-2"></i>Активный отдых
      <% end %>
      <%= link_to services_path, class: 'badge bg-info bg-opacity-10 text-info ms-2 mb-3' do %>
        <i class="bi bi-box me-2"></i>Услуги и сервисы
      <% end %>

      <!-- current -->
      <span class="badge text-secondary ms-2 mb-3" ><i class="bi bi-cup-hot me-2"></i>Где поесть</span>

      <%= link_to places_path, class: 'badge bg-warning bg-opacity-10 text-warning ms-2 mb-3' do %>
        <i class="bi bi-pin-map me-2"></i>Локации
      <% end %>
    </div>
  </div>

  <section class="pt-2">
    <div class="container">
      <div class="mb-3">
        <h1 class="fs-4"><i class="bi bi-cup-hot text-lime me-3"></i>Где поесть (<%= @pagy.count %>)</h1>                   
      </div>
      <!-- link to tags 
      <div class="my-3">
        <%= link_to 'Все локации', food_places_path, class: 'btn btn-light btn-sm' %>
        <% Place::PLACE_CATEGORIES.each do |cat| %>
          <%= link_to cat, food_places_path(category_title: cat), class: 'btn btn-light btn-sm' %>
        <% end %>
      </div>  -->

      <% if @food_places.any? %>
        <div class="row g-4">
          <%= render @food_places %>
        </div>

        <% if @pagy.count > 12 %>
          <div class="col-12 mt-5 d-flex justify-content-center">
            <%= pagy_bootstrap_nav(@pagy).html_safe %>
          </div>
        <% end %>
      <% else %>
        <div class="col-12 text-center">
          <h1 class="fs-4 mb-2">Не найдено</h1>
        </div>
      <% end %>      
    </div>
  </section>
<% end %>

