<div class="nested-fields">

  <div class="form-group mb-2">
    <%= f.label :start_date, class: 'form-label' %>        
    <%= f.date_field :start_date, class: 'start-date form-control', placeholder: 'start-date' %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :end_date, class: 'form-label' %>        
    <%= f.date_field :end_date, class: 'end-date form-control', placeholder: 'end-date' %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :day_cost, class: 'form-label' %>        
    <%= f.number_field :day_cost, class: 'form-control', placeholder: 'day-cost' %>
  </div>

  <div class="form-group mb-2">
    <%= f.hidden_field :_destroy %>
  </div>

  <%= link_to 'remove', "#", data: { action:"click->nested-prices#remove_association" } %>

</div>

