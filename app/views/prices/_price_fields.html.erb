<div class="nested-fields">
  <div class="field form-group mb-2">
    <%= f.label :start_date, class: 'form-label' %>        
    <%= f.date_field :start_date, class: 'form-control' %>
  </div>

  <div class="field form-group mb-2">
    <%= f.label :end_date, class: 'form-label' %>        
    <%= f.date_field :end_date, class: 'form-control' %>
  </div>

  <div class="field form-group mb-2">
    <%= f.label :day_cost, class: 'form-label' %>        
    <%= f.number_field :day_cost, class: 'form-control' %>
  </div>

  <%= link_to_remove_association "remove price", f %>
</div>


