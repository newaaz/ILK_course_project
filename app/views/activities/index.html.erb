<% provide(:title, "Активный отдых") %>

<%= turbo_frame_tag :town_activities do %>
  <!-- breadcrumbs -->
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Главная', root_path %></li>
        <li class="breadcrumb-item active">Активный отдых</li>
      </ol>
    </nav>
  </div>

  <section class="pt-2">
    <div class="container">      
        <% if @activities.any? %>
          <div class="mb-3">
            <h1 class="fs-4">Объявлений: <%= @pagy.count %></h1>          
          </div>

          <div class="row g-4">
          <%= render @activities %>
          </div>

          <% if @pagy.count > 12 %>
            <div class="mt-5 d-flex justify-content-center">
              <%= pagy_bootstrap_nav(@pagy).html_safe %>
            </div>
          <% end %>
          <% else %>
          <div class="text-center">
            <h1 class="fs-4 mb-2">Нет подходящих объявлений об активном отдыхе</h1>
          </div>
        <% end %>
    </div>

  </section>
<% end %>

<section></section>
<section></section>
<section></section>
<section></section>

