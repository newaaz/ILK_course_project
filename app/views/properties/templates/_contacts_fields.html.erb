<div class="card h-100 shadow">  
  <div class="card-header border-bottom">
    <h5 class="mb-0">Контакты</h5>
  </div>

  <div class="card-body">    
    <div class="row g-3">
    <%= f.fields_for :property_detail do |details_form| %>
      <div class="col-12">        
        <%= details_form.label :email, class: 'form-label' %> <span class="small text-secondary">(обязательно)</span>        
        <div class="input-group"> 
          <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          <%= details_form.email_field :email, class: 'form-control' %>            
        </div> 
      </div>

      <div class="col-12">        
        <%= details_form.label :site, class: 'form-label' %> <span class="small text-secondary">(если есть)</span>        
        <div class="input-group"> 
          <span class="input-group-text">www</span>
          <%= details_form.text_field :site, class: 'form-control' %>            
        </div> 
      </div>

      <div class="col-12">        
        <%= details_form.label :vk_group, class: 'form-label' %> <span class="small text-secondary">(если есть)</span>        
        <div class="input-group"> 
          <span class="input-group-text">vk.com/</i></span>
          <%= details_form.text_field :vk_group, class: 'form-control' %>            
        </div> 
      </div>
    <% end %>

    <div class="col-12">
      <%= f.fields_for :property_detail do |details_form| %>

      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="viber" id="contact-viber">
        <label class="form-check-label" for="contact-viber">
          Viber
        </label>
      </div>

      <div class="form-check mt-2">
        <input class="form-check-input" type="checkbox" value="whatsapp" id="contact-whatsapp">
        <label class="form-check-label" for="contact-whatsapp">
          Whatsapp
        </label>
      </div>

      

      <% end %>
    </div>


    <div class="col-12">        
      <div class="form-item">
        <label>Phone <span class="desc">+7(000)000-00-00</span></label>
        <input id="phone-mask" type="text" value="">
        </div>
      </div>
      <small>A catchy name usually includes: House name - Room name - A tourist destination</small>
    </div>

    <div class="col-12">        
      
      <small>A catchy name usually includes: House name - Room name - A tourist destination</small>
    </div> 
  </div>
    
  </div>
</div>


    