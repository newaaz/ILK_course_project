<div class="col-6 col-md-6 col-xl-4">
  <div class="card card-hover-shadow pb-0 h-100 overflow-hidden">
    <div class="position-absolute top-0 start-0 z-index-1 m-2">
      <div class="badge bg-primary bg-opacity-75 text-light" style="font-size:12px;">Море: <%= property.distance_to_sea %><small>м</small> </div>
    </div>

    <!-- Image and overlay -->
    <div class="position-relative">
      <!-- Image -->
      <div class="" data-controller="fotorama" data-object="widget"
          data-width="100%"
          data-ratio="3/2"
          data-allowfullscreen="false"                
          data-nav="false"
          data-loop="true"
          data-keyboard="true"
          data-auto="false">      
        <%= link_to image_tag(property.avatar.thumb_100.url, class: "card-img-top"), property.avatar.thumb.url %>      
        <% property.images.take(4).each do |image| %> 
          <%= link_to image_tag(image.thumb_100.url, class: "card-img-top"), image.thumb.url %>     
        <% end %>
      </div>
      <!-- Overlay -->

      <div class="card-body px-2 py-3">      
        <!-- Title -->
        <div class="d-flex justify-content-between">        
          <h5 class="h6 card-title my-0"><%= link_to property.title, property %></h5>        
        </div>
      </div>



    </div> 



  </div>
</div>