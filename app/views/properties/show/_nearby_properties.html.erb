<div class="mt-4">
  <h4>Рядом</h4>

  <% @nearby_properties.each do |nearby_property| %>
    <div class="card shadow rounded overflow-hidden my-3">
      <div class="row g-0 align-items-center">
        <!-- Image -->
        <div class="col-5">
          <%= image_tag(nearby_property.avatar.variant(resize_to_fill: [200, 150]), class: "rounded-start") %>  
        </div>

        <!-- Title and content -->
        <div class="col-7">
          <div class="card-body p-3">
            <h6 class="card-title">
              <%= link_to nearby_property.title, property_path(nearby_property), class: "stretched-link" %>
            </h6>
            <p class="small mb-0">
            <i class="bi bi-pin-map"></i>
            <%= @property.distance_to nearby_property %> m.
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
