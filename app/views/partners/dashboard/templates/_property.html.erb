<div class="card shadow p-2" id="<%= dom_id property %>">
  <div class="row g-0">
    <!-- Card img -->
    <div class="col-md-3">
      <%= link_to image_tag(property.avatar.variant(resize_to_limit: [250, 250]), class: "card-img rounded-2"), property %>  
    </div>

    <!-- Card body -->
    <div class="col-md-9">
      <div class="card-body px-1 ps-md-3 pe-md-1 py-md-2 d-flex flex-column h-100">

        <!-- Rating and buttons -->
        <div class="d-flex justify-content-between align-items-center">
          <!-- Rating
          <ul class="list-inline small mb-0">
            <li class="list-inline-item me-0"><i class="bi bi-star-fill text-warning"></i></li>
            <li class="list-inline-item me-0"><i class="bi bi-star-fill text-warning"></i></li>
            <li class="list-inline-item me-0"><i class="bi bi-star-fill text-warning"></i></li>
            <li class="list-inline-item me-0"><i class="bi bi-star-fill text-warning"></i></li>
            <li class="list-inline-item"><i class="bi bi-star-half text-warning"></i></li>
          </ul>
          Rating -->

          <small><i class="bi bi-building me-2"></i><%= property.category.title %></small>

          <!-- Actions
          <ul class="list-inline mb-0">
            <li class="list-inline-item dropdown">
              <a href="#" class="btn btn-sm btn-round btn-light mb-0" role="button" id="dropdownShare2" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-three-dots-vertical"></i>
              </a>              
              <ul class="dropdown-menu dropdown-menu-end min-w-auto shadow rounded" aria-labelledby="dropdownShare2">
                <li>
                  <%= link_to edit_property_path(property), class: 'dropdown-item' do %>
                    <i class="bi bi-pencil-square me-2"></i>Изменить
                  <% end %>
                </li>
                <li>
                  <%= link_to property_path(property), class: 'dropdown-item text-danger bg-danger-soft-hover', data: { "turbo-method": :delete, turbo_confirm: "Точно удалить - Вы уверены?" } do %>
                    <i class="bi bi-trash fa-fw me-2"></i>Удалить
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
          Actions -->
        </div>

        <h4 class="card-title mb-1"><%= link_to property.title, property %></h4>
        <small><i class="bi bi-geo-alt me-2"></i><%= "#{property.town.name}, #{property.address}" %></small>
        
        <div class="d-sm-flex justify-content-sm-between align-items-center mt-3 mt-md-auto">
          <div class="d-flex align-items-center">      

            <a data-bs-toggle="collapse" href="#collapse-<%= dom_id(property) %>" role="button" aria-expanded="false" aria-controls="collapse-<%= dom_id(property) %>" class="btn btn-primary-soft btn-sm mb-0 w-100">
              <i class="bi bi-caret-down me-1"></i>
              <span class="fw-semibold">Номеров:</span>
              <span class="mb-0 me-2"><%= property.rooms.count %></span>
            </a>

            <h6 class="mb-0 me-1">Заявок: </h6>
            <span class="mb-0 me-2"><%= property.orders.count %></span>
          </div>    

          <div class="mt-3 mt-sm-0">
            <%= link_to 'Изменить', edit_property_path(property), class: 'btn btn-outline-warning btn-sm' %>
            <%= link_to "Удалить", property_path(property), data: { "turbo-method": :delete, turbo_confirm: "Точно удалить - Вы уверены?" }, class: 'btn btn-sm btn-outline-danger' %>
          </div>                  
        </div>


        
      </div>
    </div>

    

      <div class="my-3 py-2 ps-3 pe-3 bg-primary bg-opacity-10 border border-primary border-start-0 border-end-0 d-flex justify-content-between align-items-center">
        <h5>Номера</h5>
         <%= link_to '+ Добавить номер', new_property_room_path(property), class: 'btn btn-primary-soft btn-sm' %>
      </div>


      <div class="row p-1">
        <%= render partial: 'partners/dashboard/templates/room', collection: property.rooms, as: :room %>
      </div>
  </div>
</div>





