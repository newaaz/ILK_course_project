<%= content_tag(:div, id: dom_id(room), class: "col-md-4") do %>
  <h6><%= room.title %></h6>
  <%= link_to 'Edit', edit_room_path(room), class: 'btn btn-outline-warning btn-sm' %>
  <%= link_to "Delete", room_path(room), data: { "turbo-method": :delete }, class: 'btn btn-outline-danger btn-sm' %>
  <br>
  <div class="room-images">
    <%= image_tag room.avatar_thumb, alt: room.avatar.filename.to_s %>
  </div>
<% end %>
