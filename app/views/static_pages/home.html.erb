<h1>Homepage</h1>

<% @towns.each do |town| %>
  <%= link_to town.name, town, class: "btn btn-success-soft" %>
<% end %>

<hr>

<%= render 'search/form' %>

<div id="search_result">
  <h2>All properties</h2>
  <div class="row gx-2">
    <%= render @homepage_properties %>
  </div>

  <% if @properties %>
    <%= render partial: 'properties/property', collection: @properties, as: :property %>
  <% end %>
</div>

