<div class="col-lg-6">
  <div class="vstack gap-4">
    <!-- Blog item START -->
    <div class="card card-hover-shadow border bg-transparent">
      <div class="row g-2 g-sm-3">
        <!-- Image -->
        <div class="col-md-6">
          <%= image_tag town.avatar.thumb.url, class: "card-img rounded-start rounded-0", alt: town.name %>
        </div>
        <div class="col-md-6">
          <!-- card body -->
          <div class="card-body p-0">
            <h5 class="card-title mb-sm-1 pt-3"><%= link_to town.name, town, class: "stretched-link"%></h5>
            <!-- Author name and button -->
            <div class="d-flex justify-content-between align-items-center">
              <span class="small pe-2"><%= town.description.truncate(190) %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Blog item END -->

    <hr class="my-0"> <!-- Divider -->

  </div>
</div>
