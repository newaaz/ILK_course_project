<div class="col-6">
  <%= form_with(model: @town, data: {turbo: false}) do |f| %>
    <%= render 'shared/errors', object: f.object %>

    <div class="form-group mb-2">
      <%= f.label :name %>        
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group mb-2">
      <%= f.label :parent_name %>       
      <%= f.text_field :parent_name, class: 'form-control' %>
    </div>

    <div class="form-group mb-2">
      <%= f.label :number %>       
      <%= f.number_field :number, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, accept: 'image/jpeg,image/png', class: 'form-control' %>
    </div>

    <%= f.submit "Save",class:"btn btn-primary my-4" %>
  <% end %>
</div>
