<% provide(:title, "Места и достопримечательности в #{ @town.parent_name }") %>

<section class="parallax-window" data-controller="parallax" data-parallax="scroll" data-image-src="<%= @town.avatar.url %>">
  <div class="parallax-content-2">
    <div class="container">
      <div class="row">
        <div class="col-md-8">          
          <h1>Места в <%= @town.parent_name %></h1>           
        </div>
        <div class="col-md-4">
          <div id="price_single_main" class="hotel">
            <span><sup></sup></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= turbo_frame_tag :town_places do %>
  <!-- breadcrumbs -->
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Главная', root_path %></li>
        <li class="breadcrumb-item"><%= link_to @town.name, @town %></li>
        <% if @category_title %>
          <li class="breadcrumb-item"><%= link_to "Места и достопримечательности в #{@town.parent_name}", places_town_path(@town) %></li> 
          <li class="breadcrumb-item active"><%= @category_title %></li>  
        <% else %>
          <li class="breadcrumb-item active"><%= "Места и достопримечательности в #{@town.parent_name}" %></li>      
        <% end %>
      </ol>
    </nav>

    <div class="mt-3 text-center text-md-start">
      <%= link_to town_path(@town), class: 'badge bg-primary  text-white mb-3' do %>
        Страница города<i class="ms-2 bi bi-arrow-right"></i>
      <% end %>
      <%= link_to properties_town_path(@town), class: 'badge bg-primary bg-opacity-10 text-primary ms-2 mb-3' do %>
        <i class="bi bi-check2-circle me-2"></i>Где остановиться
      <% end %>
      <%= link_to activities_town_path(@town), class: 'badge bg-orange bg-opacity-10 text-orange ms-2 mb-3' do %>
        <i class="bi bi-star me-2"></i>Активный отдых
      <% end %>
      <%= link_to services_town_path(@town), class: 'badge bg-info bg-opacity-10 text-info ms-2 mb-3' do %>
        <i class="bi bi-box me-2"></i>Услуги и сервисы
      <% end %> 
    </div>
  </div>

  <section class="pt-2">
    <div class="container">
      <div class="mb-3">
        <% if @category_title %>
          <h1 class="fs-4"><i class="bi bi-pin-map text-warning me-3"></i><%= "Места и достопримечательности. #{@category_title} в #{@town.parent_name} (#{@pagy.count})" %></h1> 
        <% else %>
          <h1 class="fs-4"><i class="bi bi-pin-map text-warning me-3"></i><%= "Места и достопримечательности в #{@town.parent_name} (#{@pagy.count})" %></h1> 
        <% end %>                    
      </div>
      <div class="my-3">
        <%= link_to 'Все места', places_town_path(@town), class: 'btn btn-light btn-sm' %>
        <% Place::PLACE_CATEGORIES.each do |cat| %>
          <%= link_to cat, places_town_path(@town, { category_title: cat }), class: 'btn btn-light btn-sm' %>
        <% end %>
      </div> 
      
      <% if @places.any? %>
        <div class="row g-4">
          <%= render @places %>
        </div>

        <% if @pagy.count > 12 %>
          <div class="col-12 mt-5 d-flex justify-content-center">
            <%= pagy_bootstrap_nav(@pagy).html_safe %>
          </div>
        <% end %>
        <% else %>
        <div class="col-12 text-center">
          <h1 class="fs-4 mb-2">Не найдено</h1>
        </div>
      <% end %>      
    </div>
  </section>
<% end %>

