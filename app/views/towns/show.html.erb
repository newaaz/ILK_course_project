<% provide(:title, "#{@town.name} - жильё и активный отдых") %>

<section class="parallax-window" data-controller="parallax" data-parallax="scroll" data-image-src="<%= @town.avatar.url %>">
  <div class="parallax-content-2">
    <div class="container">
      <div class="row">
        <div class="col-md-8">          
          <h1><%= @town.name %></h1>  
					<span>Жильё, активный отдых и услуги в <%= @town.parent_name %></span>         
        </div>
        <div class="col-md-4">
          <div id="price_single_main" class="hotel">
            <span><sup></sup></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- breadcrumbs -->
<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Главная', root_path %></li>
      <li class="breadcrumb-item active"><%= @town.name %></li>  
    </ol>
  </nav>
</div>

<section class="pt-0 pb-3">
	<div class="container">
		<div class="bg-light rounded border p-3 p-sm-4">	
			<div class="align-items-center position-relative">
				
				<p class="mb-3 mb-lg-0 fs-6"><%= @town.description %></p>
				
			</div> <!-- Row END -->
		</div>
	</div>
</section>


<section class="py-3">
	<div class="container">
		
    <%= link_to "Жильё в #{@town.parent_name}", properties_town_path(@town), class: 'btn btn-primary btn-lg' %>

	</div>
</section>


<section class="py-3">
  <div class="container">
    <h2 class="h3">Жильё <%= @town.parent_name %></h2>  

    <div class="categories my-3">
      <%= link_to 'Все категории', properties_town_path(@town), class: 'btn btn-light btn-sm' %>
      <% @categories.each do |cat| %>
        <%= link_to cat.title, properties_town_path(@town, { cat: cat.id }), class: 'btn btn-light btn-sm' %>
      <% end %>
    </div>

  </div>
</section>











