<% provide(:title, "Booking") %>

<h1><%= "Booking - #{@property.title}:#{@room.title}" %></h1>

<%= form_with(model: @order, class: 'w-75', data: {turbo: false}) do |f| %>
  <%= render 'shared/errors', object: f.object %>

  <%= hidden_field_tag(:property_id, @property.id) %>

  <!-- checkin - checkout -->
  <div class="row">
    <div class="col-6 form-group mb-2">
      <%= f.label :check_in, class: 'form-label' %>        
      <%= f.date_field :check_in, class: 'form-control' %>
    </div>
    <div class="col-6 form-group mb-2">
      <%= f.label :check_out, class: 'form-label' %>        
      <%= f.date_field :check_out, class: 'form-control' %>
    </div>
  </div>

  <!-- room type -->
  <div class="form-group mb-2">
    <%= f.label 'Room type', class: 'form-label' %>
    <%= f.collection_select :room_id, @property.rooms, :id, :title, { selected: @room.id  },
                                                                    class: "form-select" %>  
  </div>

  <!-- adults, kids -->
  <div class="row">
    <div class="col-6 form-group">
      <%= f.label :adults, class: "form-label" %>               
      <%= f.number_field :adults, class:"form-control" %>
    </div>
    <div class="col-6 form-group">
      <%= f.label :kids, class: "form-label" %>               
      <%= f.number_field :kids, class:"form-control" %>
    </div>
  </div>

  <!-- customer name and phone number -->
  <div class="row">
    <div class="col-6 form-group">
      <%= f.label :customer_name, class: "form-label" %>               
      <%= f.text_field :customer_name, class:"form-control" %>
    </div>
    <div class="col-6 form-group">
      <%= f.label :customer_phone_number, class: "form-label" %>               
      <%= f.text_field :customer_phone_number, class:"form-control" %>
    </div>
  </div>

  <!-- wishes comment -->
  <div class="form-group mt-4">
    <%= f.label :wishes_comment, class: "mb-1" %>                  
    <%= f.text_area :wishes_comment, class:"form-control form-control-sm" %>
  </div>

  <%= f.submit "Send",class:"btn btn-primary my-4" %>
<% end %>

